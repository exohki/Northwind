@model IEnumerable<Discount>
<div class="p-4 m-2 mt-4 bg-body-tertiary rounded-3 border">
    <h1 class="display-4 fw-bold">
        Northwind
    </h1>
    <p class="fs-5">For exceptional international quisuine, look no further.</p>
    <a class="btn btn-outline-primary btn-lg" href="#" role="button"><i class="bi bi-cart"></i> Order Now</a>
</div>
<div class="p-2 m-2 row row-cols-1 row-cols-lg-3 featured">
    @foreach (Discount d in Model)
    {
        <div class="col discounts px-2 py-4">
            <h4>@d.Title</h4>
            <div class="mb-4">
                @d.Description
            </div>
            <i>Discount expires: @d.EndTime</i><br />
            <a href="#"><i class="far fa-hand-point-right"></i> Discount Code</a>
        </div>
    }
</div>